/* pages/allassess/index.wxss */
.bottom{
  padding: 25rpx 30rpx;
}
.title{
  padding: 0 45rpx;
  font-size: 14px;
  font-weight: bold;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  background: #fff;
}
.list{
  padding-left: 45rpx;
  background: #fff;
}
.item{
  padding: 30rpx 45rpx 30rpx 0 ;
  border-bottom: 1px solid #eee;
}
.img{
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx 20rpx 0 0;
  border: 1px solid #eee;
}
.name {
  display: flex;
  align-items: center;
}
.name image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  border: 1px solid #eee;
}
.name text{
  font-size: 12px;
  color: #999;
}
.size{
  color: #999;
}
.info .text{
  padding: 15rpx 0;
}