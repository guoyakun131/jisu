/* pages/sureorder/index.wxss */
.box{
  padding-bottom: 100rpx;
  /*min-height: 100%;*/
}
.top{
  padding: 25rpx 30rpx;
  background: #fff;
  font-size: 15px;
  border-bottom: 2px dashed #8ab8fc;
}
.top .link:after{
  right: 0;
}
.no-addr{
  padding: 25rpx 0;
}
.no-addr{
  display: flex;
  align-items: center;
}
.addr {
  display: flex;
}
.addr-info{
  padding-right: 25rpx;
  flex: 1;
}
.addr-info .name{
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 10rpx;
}
.addr-icon{
  display: inline-block;
  width: 25rpx;
  height: 34rpx;
  margin-right: 15rpx;
  background: url(data:image/png;base64,);
  background-size: cover;
}
.addr-txt{
  /* padding-left: 35rpx; */
  font-size: 12px;
  color: #666;
}
.shop-title .icon{
  width: 28rpx;
  height: 25rpx;
  margin-right: 10rpx;
  background: url(data:image/png;base64,);
  background-size: cover;
}
.middle,.bottom{
  margin-top: 20rpx;
  background: #fff;
}
.middle .shop-title{
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  font-size: 14px;
  border-bottom: 1px solid #eee;
}
.middle .item{
  display: flex;
  padding: 10rpx 30rpx;
}
.middle .item image{
  width: 245rpx;
  height: 210rpx;
}
.middle .item .info{
  margin-left: 20rpx;
}
.middle .link-item,.bottom .link-item{
   padding: 0; 
}
.middle .note,.bottom .note{
  padding-left: 30rpx;
}
.middle .size{
  color: #999;
}
.middle .name{
  font-size: 14px;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.middle .price{
  margin-top: 20rpx;
  color: #ff4444;
  font-size: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.middle .price text{
  color: #999999;
  font-size: 12px;
}
.bottom .right{
  color: #666;
}
.handle{
  justify-content: space-between;
  align-items: center;
}
.handle button{
  width: 220rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 16px;
  background: #ff4444;
  margin: 0;
  border-radius: 0;
  color: #fff;
}
.handle .sum{
  text-align: right;
  font-size: 16px;
  padding-right: 20rpx;
  flex: 1;
  color: #666666;
}
.handle .sum text{
  color: #ff4444;
}
.link-item input[type="text"]{
  text-align: left;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Helvetica Neue', 'Microsoft Yahei', 'WenQuanYi Micro Hei', sans-serif;
}
.middle .right,.bottom .right{
  color: #666;
}
.s .right{
  color: #ff4343;
}