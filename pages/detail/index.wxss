/* pages/detail/index.wxss */

.box{
  padding-bottom: 100rpx;
  border:none;
}
swiper{
  height: 470rpx;
}
swiper image{
  width: 100%;
}
.top{
  padding: 0 30rpx;
  background: #fff;
}
.top .name{
  padding: 20rpx 0;
  font-size: 16px;
}
.top .price{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  color: #ff4444;
  font-size: 16px;
}
.top .feight{
  color: #999;
  padding: 20rpx 0;
}
.top .feight .only{
  float: right;
}
.middle,.bottom{
  margin-top: 15rpx;
  background: #fff;
}
.middle .link-item{
  line-height: 85rpx;
}
.middle .link-item .title{
  width: 250rpx;
}
.bottom{
  padding: 25rpx 30rpx;
}
.bottom .title{
  margin-bottom: 25rpx;
  font-size: 14px;
  font-weight: bold;
}
.bottom .name {
  display: flex;
  align-items: center;
}
.bottom .name image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  border: 1px solid #eee;
}
.bottom .name text{
  font-size: 12px;
  color: #999;
}
.bottom .size{
  color: #999;
}
.bottom .info .text{
  padding: 15rpx 0;
}
.bottom button{
  margin: 35rpx auto 0 auto;
  padding: 0;
  width: 200rpx;
  height: 50rpx;
  border-radius: 48rpx;
  line-height: 48rpx;
  border: 1px solid #ff4444;
  background: #fff;
  color: #ff4444;
  font-size: 13px;
}
.detail-box{
  margin-top: 20rpx;
}
.detail-content{
  padding: 0 15px; 
  background: #fff;
}
.detail-box .title{
  font-size: 13px;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 85rpx;
  background: #fff;
}
.detail-box .icon{
  display:inline-block;
  height:10px;
  width:10px;
  border-width:2px 2px 0 0;
  border-color:#c8c8cd;
  border-style:solid;
  transform:rotate(-45deg);
  margin:8rpx 0 0 10rpx;
}

.handle .zx{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  text-align: center;
  height: 100%;
  border-right: 1px solid #eee;
  background: #fff;
  line-height: initial;
}
.handle .zx view{
  width: 44rpx;
  height: 44rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.handle .zx text{
  color: #999999;
  font-size: 10px;
}
.handle .cart-icon view{
  width: 44rpx;
  height: 44rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.handle .cart-icon text{
  color: #999999;
  font-size: 10px;
}
.handle .cart-icon{
  width: 120rpx;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.handle .add-cart{
  flex: 1;
  background: #ff8855;
  color: #fff;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 16px;
}
.handle .buy{
  flex: 1;
  background: #ff4444;
  color: #fff;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 16px;
}
.action-box{
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  height: 100%;
  background: rgba(0, 0, 0, 0.65);
}

.action{
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 1001;
  font-size: 14px;
  padding: 0 22rpx 140rpx 22rpx;
}

.action .act-top {
  display: flex;
  border-bottom: 1px solid #eee;
}
.action .act-top .act-left{
  width: 240rpx;
  height: 240rpx;
  margin-top:-50rpx;
  background: #fff;
}
.action .act-top .act-right{
  flex: 1;
  margin-left: 15rpx;
  padding: 50rpx 0;
}
.action .act-top image{
  width: 100%;
  height: 100%;
}
.action .act-top .price{
  font-size: 16px;
  color: #ff4444;
}
.action .act-top icon{
  position: absolute;
  right: 15rpx;
  top: 15rpx;
}
.act-middle .title{
  line-height: 75rpx;
}
.act-middle .list{
  display: flex;
  align-items: center;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #eee;
  font-size: 13px;
}
.act-middle .item{
  border-radius: 5px;
  background: #f5f5f5;
  padding: 0 30rpx;
  display: inline-block;
  line-height: 55rpx;
  text-align: center;
  margin-right: 25rpx;
}
.act-middle .item.active{
  background: #ff4444;
  color: #fff;
}
.act-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 0;
  border-bottom: 1px solid #eee;
}
